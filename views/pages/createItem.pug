html
	head
		title Create Items Page
		link(rel='stylesheet' href='/style.css')
body
	
	form(action='/createItem/' method='post')

		h2 Create new items:             
		h3 
			| Name: 
			input(type='text' name='itemName' required='' size = "30")
		h3 
			| Warehouse: 
			input(type='text' name='itemLocation' required='' size = "30")
		h3 
			| SKU: 
			input(type='text' name='itemSKU' required='' size = "12")
		h3 
			| Quantity: 
			input(type='text' name='itemQty' required='' size = "10")
		h3 
			| Category: 
			input(type='text' name='itemCategory' required='' size = "15")            
		
		button(type='submit') Save			
